citHeader("To cite the 'Specimen' package in publications use:")

year <- format(Sys.Date(), "%Y")

citEntry(entry = "Misc",
         title = "Specimen",
         author = personList(as.person("Alessandro Oggioni")),
         year = year,
         note = paste("R package version", "v0.0.0.9000"),
         textVersion =
           paste("Alessandro Oggioni.",
                 " (2024). Specimen (v0.0.0.9000).",
                 "Zenodo. https://doi.org/10.5281/zenodo.xxxxxx")
)